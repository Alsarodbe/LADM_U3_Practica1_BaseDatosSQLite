<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#C8DFBE"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#000"
        android:text="LADM: Unidad 3, Práctica 1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/etxtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="¿Que es?"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/etxtCaptura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="¿Cuando se capturó?"
        android:layout_marginBottom="10dp"
        android:inputType="date"/>

    <EditText
        android:id="@+id/etxtEntrega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="¿Cuando se entregó?"
        android:layout_marginBottom="10dp"
        android:inputType="date"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnInsertar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8CD66D"
            android:textColor="#000"
            android:layout_weight="1"
            android:text="Insertar"/>

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#73CF4C"
            android:textColor="#000"
            android:layout_weight="1"
            android:text="Buscar" />
    </LinearLayout>

    <ListView
        android:id="@+id/listaActividades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>