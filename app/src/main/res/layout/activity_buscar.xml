<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#C8DFBE"
    tools:context=".BuscarActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese la fecha de entrega"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/fcapA2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Â¿Cuando?"
        android:inputType="date"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buscarA2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8CD66D"
            android:textColor="#000"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="BUSCAR"/>

        <Button
            android:id="@+id/volverA2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#73CF4C"
            android:textColor="#000"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="VOLVER"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
