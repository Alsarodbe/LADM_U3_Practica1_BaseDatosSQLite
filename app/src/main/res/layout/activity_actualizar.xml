<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#C8DFBE"
    tools:context=".ActualizarActivity">

    <TextView
        android:id="@+id/textV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:text="Actualización de los datos"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/descripcionAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Descripción" />

    <EditText
        android:id="@+id/fcapturaAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de captura"
        android:layout_marginBottom="10dp"
        android:inputType="date" />

    <EditText
        android:id="@+id/fentregaAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de entrega"
        android:inputType="date" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/actualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8CD66D"
            android:textColor="#000"
            android:layout_weight="1"
            android:text="Actualizar"/>

        <Button
            android:id="@+id/regresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#73CF4C"
            android:textColor="#000"
            android:layout_weight="1"
            android:text="Regresar" />
    </LinearLayout>

</LinearLayout>